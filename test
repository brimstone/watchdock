#!/bin/bash

TMP="/tmp/containers/"

echo "Clearing previous containers and images"
docker rm -f $(docker ps -a -q)
docker rmi $(docker images -q)

echo "Clearing out $TMP"
rm -rf $TMP
mkdir -p $TMP

echo "Starting watchdock in the background"


find . -name "*.go" -exec go fmt \{\} \; 2>/dev/null
go run watchdock.go --dir "$TMP" &
pid=$!

sleep 10

echo "Inserting test container file"
cat > /tmp/containers/consul.json <<DOG
{"Args":["agent","-server","-data-dir=/consul","-client=0.0.0.0","-ui-dir=/webui"],"Config":{"AttachStderr":false,"AttachStdin":false,"AttachStdout":false,"Cmd":[],"CpuShares":0,"Dns":null,"Domainname":"","Entrypoint":["/usr/bin/consul","agent","-server","-data-dir=/consul","-client=0.0.0.0","-ui-dir=/webui"],"Env":["HOME=/","PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin","GOPATH=/go"],"ExposedPorts":{"8300/tcp":{},"8301/tcp":{},"8302/tcp":{},"8400/tcp":{},"8500/tcp":{},"8600/udp":{}},"Hostname":"4e3aa5c16cb3","Image":"brimstone/consul","Memory":0,"MemorySwap":0,"NetworkDisabled":false,"OpenStdin":false,"PortSpecs":null,"StdinOnce":false,"Tty":false,"User":"","Volumes":null,"VolumesFrom":"","WorkingDir":""},"Created":"2014-09-20T04:13:10.644046527Z","Driver":"aufs","HostConfig":{"Binds":null,"ContainerIDFile":"","Dns":null,"DnsSearch":null,"Links":null,"LxcConf":[],"NetworkMode":"bridge","PortBindings":{"8500/tcp":[{"HostIp":"","HostPort":"8500"}]},"Privileged":false,"PublishAllPorts":false,"VolumesFrom":null},"HostnamePath":"/var/lib/docker/containers/4e3aa5c16cb3feeb37416c306a60d02dc34423ee5bea159b3051a7726d0b10b2/hostname","HostsPath":"/var/lib/docker/containers/4e3aa5c16cb3feeb37416c306a60d02dc34423ee5bea159b3051a7726d0b10b2/hosts","ID":"4e3aa5c16cb3feeb37416c306a60d02dc34423ee5bea159b3051a7726d0b10b2","Image":"aa3ebf86d2d63cc6325631226abf5828431660e3b6f324204d858c0b96c43d5b","Name":"/consul","NetworkSettings":{"Bridge":"docker0","Gateway":"10.42.99.1","IPAddress":"10.42.99.27","IPPrefixLen":24,"PortMapping":null,"Ports":{"8300/tcp":null,"8301/tcp":null,"8302/tcp":null,"8400/tcp":null,"8500/tcp":[{"HostIp":"0.0.0.0","HostPort":"8500"}],"8600/udp":null}},"Path":"/usr/bin/consul","ResolvConfPath":"/var/lib/docker/containers/4e3aa5c16cb3feeb37416c306a60d02dc34423ee5bea159b3051a7726d0b10b2/resolv.conf","State":{"ExitCode":0,"FinishedAt":"0001-01-01T00:00:00Z","Paused":false,"Pid":18481,"Running":true,"StartedAt":"2014-09-20T04:13:10.863796358Z"},"SysInitPath":"","Volumes":{},"VolumesRW":{}}
DOG

echo "Waiting up to 2 minute for consul container to show up"
i=0
while [ $i -lt 240 ]; do
	if [ "$(docker inspect -f '{{ .State.Running }}' consul 2>/dev/null )" = "true" ]; then
		echo "Took $i seconds"
		break
	fi
	i=$[ $i + 1 ]
	sleep 1
done

if [ "$(docker inspect -f '{{ .State.Running }}' consul 2>/dev/null )" = "true" ]; then
	echo "Test passed"
else
	echo "Test failed"
	pkill -f watchdock
	exit 1
fi

pkill -f watchdock
